{
  "name": "damn-vulnerable-crypto-app-backend",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "yarn run transpile && yarn mkdirp build/uploads && yarn run copy-docs-build && yarn run copy-configs",
    "copy-docs-build": "yarn copyfiles \"../docs/app/**/*\" build/docs -a -u 3",
    "copy-configs": "yarn copyfiles \"src/config/**/*\" build -a -u 1",
    "copy-docs": "yarn copyfiles \"../docs/app/**/*\" src/documentation -a -u 3",
    "transpile": "yarn tsc --project tsconfig.json",
    "start:dev": "yarn run generate:flags && yarn run copy-docs && yarn cross-env NODE_ENV=development yarn nodemon --watch \"src/**/*.ts\" --ignore \"node_modules/**/*\" --exec ts-node src/index.ts",
    "start:prod": "yarn cross-env NODE_ENV=production node build/index.js",
    "generate:flags": "yarn ts-node src/bin/generateFlags.ts",
    "tests": "mocha --require ts-node/register \"./test/**/*Test.ts\" --timeout 50000 --exit",
    "lint:fix": "yarn tslint --project tsconfig.json  --fix",
    "tests:coverage": "yarn nyc yarn run tests && nyc report --reporter=text-lcov > coverage.lcov"
  },
  "dependencies": {
    "@types/uuid": "^8.3.4",
    "body-parser": "^1.19.0",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.5-lts.1",
    "rc4.js": "^1.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.3.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/mocha": "^9.1.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.38",
    "@types/supertest": "^2.0.12",
    "chai": "^4.3.6",
    "copyfiles": "^2.4.1",
    "eslint": "^8.17.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.7",
    "supertest": "^6.2.3",
    "ts-node": "^10.8.1",
    "tslint": "^6.1.3",
    "typescript": "^4.7.3"
  }
}
